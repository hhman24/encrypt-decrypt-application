<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox" x:Key="TextBoxReadOnly">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="Width" Value="150"/>
        
        <Setter Property="Background" Value="{DynamicResource panelOverColor}"/>
        <Setter Property="Foreground" Value="#9b9b9b"/>
        <Setter Property="SelectionBrush" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#333536"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CaretBrush" Value="{DynamicResource titleColor1}"/>
        <Setter Property="ContextMenu" Value="{x:Null}"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

</ResourceDictionary>